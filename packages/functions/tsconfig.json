{
  "compilerOptions": {
    "target": "ES2018",
    "useDefineForClassFields": true,
    "declaration": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "strict": true,
    "isolatedModules": true,
    "useUnknownInCatchVariables": false,
    "esModuleInterop": true,
    "lib": [
      "esnext",
      "dom"
    ],
    "skipLibCheck": true,
    "outDir": "./dist"
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts"
  ],
}